<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="?backgroundColor">


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="?textColor"
        android:textSize="48sp"
        android:textStyle="bold"
        android:background="?backgroundColor"/>
    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/restart_button"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="?buttonTextColor"
        android:text="START"
        android:textSize="32sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_weight="1">
        <Button
            android:id="@+id/prev_grid"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textColor="?textColor"
            android:text="&lt;&lt;"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="right"
            android:background="?backgroundColor"
            android:layout_weight="1"
            android:stateListAnimator="@null"/>
        <TextView
            android:id="@+id/grid_size_selector"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            android:textColor="?textColor"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_weight="8"/>
        <Button
            android:id="@+id/next_grid"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="&gt;&gt;"
            android:textColor="?textColor"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="left"
            android:stateListAnimator="@null"
            android:background="?backgroundColor"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Best Time"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="?textColor"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/best_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="32sp"
        android:text="Good Luck!!!"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="?textColor"/>
</LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="?backgroundColor"
        app:itemTextColor="?textColor"
        android:id="@+id/nav_view">
        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?backgroundColor"
            android:dividerHeight="0dp"
            android:groupIndicator="@null" />
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>